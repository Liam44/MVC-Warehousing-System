@model MVCWarehousingSystem.ViewModels.StockItems.DeleteMultipleVM

@{
    ViewBag.Title = "Delete Multiple Articles";
}

<h2>Delete Multiple Articles</h2>

@using (Html.BeginForm("DeleteMultipleConfirm", "StockItems"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <table class="table">
        <tr>
            <th>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.First().Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.First().ShelfPosition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.First().Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.First().Description)
            </th>
        </tr>

        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @{if (Model.ItemsToBeDeleted.Contains(item.ArticleNumber))
                        {
                            <input type="checkbox"
                                   name="ItemsToBeDeleted"
                                   value="@item.ArticleNumber"
                                   id="@item.ArticleNumber"
                                   checked="checked" />
                        }
                        else
                        {
                            <input type="checkbox"
                                   name="ItemsToBeDeleted"
                                   value="@item.ArticleNumber"
                                   id="@item.ArticleNumber" />
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShelfPosition)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
            </tr>
                        }

    </table>

    <div class="form-group">
        <input type="submit"
               value="Delete selected articles"
               style="font-weight:bold;"
               class="btn btn-default" />
    </div>
                        }

@Html.Partial("_BackToListPartial")



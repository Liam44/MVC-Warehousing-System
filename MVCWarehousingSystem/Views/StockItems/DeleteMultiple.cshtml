@model MVCWarehousingSystem.ViewModels.StockItems.DeleteMultipleVM

@{
    ViewBag.Title = "Delete Multiple Articles";
}

<h2>Delete Multiple Articles</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ItemsToBeDeleted.Keys.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemsToBeDeleted.Keys.First().Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemsToBeDeleted.Keys.First().ShelfPosition)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemsToBeDeleted.Keys.First().Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemsToBeDeleted.Keys.First().Description)
        </th>
        <th>
            @Html.DisplayName("To be deleted?")
        </th>
    </tr>

    @foreach (var item in Model.ItemsToBeDeleted.Keys)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShelfPosition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => Model.ItemsToBeDeleted[item])
            </td>
        </tr>
    }

</table>

@Html.ActionLink("Delete the selected articles",
                 "DeleteMultipleConfirmed",
                 new MVCWarehousingSystem.ViewModels.StockItems.DeleteMultipleVM()) |
@Html.ActionLink("Back to List", "Index")


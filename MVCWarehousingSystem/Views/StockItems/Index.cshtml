@model IEnumerable<MVCWarehousingSystem.Models.StockItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<form id="frmsearch" action="~/StockItems/Search" method="get">
    <input name="searchedValue" type="text" placeholder="Search Articles by Name or by Price" value="" style="width:275px;" />
    <input name="submit-button" type="submit" style="font-weight:bold;" value="Search" />
</form>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Article Name", "Index", new { sortOrder = ViewBag.ArticleNameSortParam })
        </th>
        <th>
            @Html.ActionLink("Price", "Index", new { sortOrder = ViewBag.PriceSortParam })
        </th>
        <th>
            @Html.ActionLink("Position on Shelf", "Index", new { sortOrder = ViewBag.LocationSortParam })
        </th>
        <th>
            @Html.ActionLink("Quantity Available", "Index", new { sortOrder = ViewBag.QuantitySortParam })
        </th>
        <th>
            @Html.ActionLink("Description", "Index", new { sortOrder = ViewBag.DescriptionSortParam })
        </th>
        <th></th>
    </tr>

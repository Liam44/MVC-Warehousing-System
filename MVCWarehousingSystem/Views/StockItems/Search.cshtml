@model MVCWarehousingSystem.ViewModels.StockItems.SearchItemsVM

@{
    ViewBag.Title = "Articles by " + (Model.ByName ? "Name" : "Price") + " (" + Model.Value + ")";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Result.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Result.First().Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Result.First().ShelfPosition)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Result.First().Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Result.First().Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Result)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShelfPosition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ArticleNumber }) |
                @Html.ActionLink("Details", "Details", new { id = item.ArticleNumber }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ArticleNumber })
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>

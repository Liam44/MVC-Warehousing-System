@model MVCWarehousingSystem.ViewModels.StockItems.SearchByNameViewModel

@{
    ViewBag.Title = "Articles by Name (" + Model.Name + ")";
}

<h2>SearchByName</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Result.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Result.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Result.ShelfPosition)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Result.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Result.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Result)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShelfPosition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ArticleNumber }) |
                @Html.ActionLink("Details", "Details", new { id = item.ArticleNumber }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ArticleNumber })
            </td>
        </tr>
    }

</table>
